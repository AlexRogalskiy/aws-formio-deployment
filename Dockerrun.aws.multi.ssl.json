{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "certs",
      "host": {
        "sourcePath": "/var/app/current/certs"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/conf.d.ssl"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "api-server",
      "image": "IMAGE",
      "environment": [
        {
          "name": "MONGO_CA",
          "value": "/src/certs/rds-combined-ca-bundle.pem"
        },
        {
          "name": "PDF_SERVER",
          "value": "https://pdf-server:4005"
        },
        {
          "name": "SSL_KEY",
          "value": "SSL_KEY_VALUE"
        },
        {
          "name": "SSL_CERT",
          "value": "SSL_CERT_VALUE"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "links": [
        "pdf-server"
      ],
      "memory": 1024,
      "mountPoints": [
        {
          "sourceVolume": "certs",
          "containerPath": "/src/certs"
        }
      ]
    },
    {
      "name": "pdf-server",
      "image": "PDF_IMAGE",
      "environment": [
        {
          "name": "MONGO_CA",
          "value": "/src/certs/rds-combined-ca-bundle.pem"
        },
        {
          "name": "SSL_KEY",
          "value": "SSL_KEY_VALUE"
        },
        {
          "name": "SSL_CERT",
          "value": "SSL_CERT_VALUE"
        }
      ],
      "memory": 1024,
      "mountPoints": [
        {
          "sourceVolume": "certs",
          "containerPath": "/src/certs"
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "public.ecr.aws/nginx/nginx:latest",
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "api-server",
        "pdf-server"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d"
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "certs",
          "containerPath": "/src/certs"
        }
      ]
    }
  ]
}
